server {
    server_name urbanbliss.cleverdevloper.in www.urbanbliss.cleverdevloper.in;

    location / {
        location / {
        proxy_pass http://localhost:4000; #whatever port your app runs on
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/urbanbliss.cleverdevloper.in/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/urbanbliss.cleverdevloper.in/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = urbanbliss.cleverdevloper.in) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name urbanbliss.cleverdevloper.in www.urbanbliss.cleverdevloper.in;
    return 404; # managed by Certbot


}